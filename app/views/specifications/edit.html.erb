<ul class="tabs"> 
	<li><%= link_to "#{t("bootstrap-rails.list", :default => "List")}", specifications_path  %></li> 
	<li><%= link_to "#{t("bootstrap-rails.new", :default => "New")}", new_specification_path %></li>  
