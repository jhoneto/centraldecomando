<ul class="tabs"> 
	<li><%= link_to "#{t("bootstrap-rails.list", :default => "List")}", filters_path  %></li> 
	<li><%= link_to "#{t("bootstrap-rails.new", :default => "New")}", new_filter_path %></li>  
	<li class="active"><%= link_to "#{t("bootstrap-rails.edit", :default => "Edit")}", edit_filter_path %></li>
</ul>
<h2 class="title"><%= t("bootstrap-rails.edit", :default => "Edit") %> Filter</h2>                            

<%= form_for @filter, :url => filter_path(@filter), :html => { :class => "form-stacked" } do |f| -%>
    <%= render :partial => "form", :locals => {:f => f, :where => @where} %>
<% end -%>                        

<% content_for :sidebar, render(:partial => 'sidebar') -%> 

