<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", projects_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_project_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.list_of")%> <%= t("activerecord.models.projects")%></h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.project.name", :default => t("activerecord.labels.name", :default => "Name")) %>
          </th>
                    
          <th class="last">&nbsp;</th>
        </tr>
        <% @projects.each do |project| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= project.id %>
          </td>
                    <td>
            <%= link_to project.name, edit_project_path(project) %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_project_path(project) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", project_path(project), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %> <!--|
            <%= link_to "Sprints", :controller => :sprints, :action => :index, :project_id => project.id%> -->
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= will_paginate @projects  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
