   <div class="clearfix">
     <label for="xlInput"><%= t("activerecord.attributes.layout_field.label", :default => "Label") %></label>
     <div class="input">
       <%= f.text_field :label, :class => "xlarge" %>
     </div>
  </div>
 
   <div class="clearfix">
     <label for="xlInput"><%= t("activerecord.attributes.layout_field.field_type", :default => "Field type") %></label>
     <div class="input">                   
       <%= f.select :field_type , FieldType::FIELD_TYPE_LIST, {}, {:class => "xlarge"}%>
     </div>
  </div>
 
   <div class="clearfix">
     <label for="xlInput"><%= t("activerecord.attributes.layout_field.visible", :default => "Visible") %></label>
     <div class="input">
       <%= f.check_box :visible, :class => "xlarge" %>
     </div>
  </div>
       

<div class="actions">
  <input type="submit" class="btn large primary" value="Salvar">&nbsp;<%= link_to t("bootstrap-rails.cancel", :default => "Cancel"), layout_layout_fields_path, :class => "btn large" %>
</div>

