   <%= f.hidden_field :project_id, :class => 'text_field' %> 

 
   <div class="clearfix">
     <label for="xlInput"><%= t("activerecord.attributes.project_member.user_id", :default => "User") %></label>
     <div class="input">
       <%= f.collection_select(:user_id, User.where("account_id = ?", current_user.account_id), :id, :name,  {:prompt => "Selecione um usuário"}, {:class => "xlarge"})%>
     </div>
  </div>
 
   <div class="clearfix">
     <label for="xlInput"><%= t("activerecord.attributes.project_member.role", :default => "Role") %></label>
     <div class="input">  
       <%= f.select :role , Role::ROLE_LIST, {:prompt => "Selecione uma função"}, {:class => "xlarge"}%>
     </div>
  </div>
 
   <div class="clearfix">
     <label for="xlInput"><%= t("activerecord.attributes.project_member.week_hours", :default => "Week hours") %></label>
     <div class="input">
       <%= f.text_field :week_hours, :class => "xlarge" %>
     </div>
  </div>
       

<div class="actions">
  <input type="submit" class="btn large primary" value="Salvar">&nbsp;<%= link_to t("bootstrap-rails.cancel", :default => "Cancel"), project_project_members_path(@project), :class => "btn large" %>
</div>

