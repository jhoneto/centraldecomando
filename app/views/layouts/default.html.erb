<!DOCTYPE html>
<html>
<head>
  <title>Web App</title>
  <%= stylesheet_link_tag "formtastic" %>
  <%= stylesheet_link_tag "formtastic_changes" %>
  <%= stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/Djime-Cerulean/style", "web-app-theme/override", :cache => true %>
  
  <%= javascript_include_tag :defaults, :cache => true %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <div id="header">
      <h1><a href="/">Central de Comando</a></h1>
      <div id="user-navigation">
        <ul class="wat-cf">
          <li><a href="#"><%= t("web-app-theme.profile", :default => "Minha conta") %></a></li>
          <li><a href="#"><%= t("web-app-theme.settings", :default => "Configurações") %></a></li>
          <li><%= link_to t("web-app-theme.logout", :default => "Sair") , session_path, :method => :delete %></li>
        </ul>
      </div>
      <div id="main-navigation">
	  
        <ul class="wat-cf"> 
	      <li class="<%= controller.controller_path == 'projects' ? 'active' : '' %>"><a href="<%= projects_path %>">Projetos</a></li>
	      <li class="<%= controller.controller_path == 'clients' ? 'active' : '' %>"><a href="<%= clients_path %>">Clientes</a></li>
	      <li class="<%= controller.controller_path == 'tickets' ? 'active' : '' %>"><a href="<%= tickets_path %>">Tickets</a></li>
	    </ul>

      </div>
    </div>    
    <div id="wrapper" class="wat-cf">
      

      <div id="main">
	    <div class="flash">
	        <% flash.each do |type, message| -%>
	          <div class="message <%= type %>">
	            <p><%= message %></p>
	          </div>
	        <% end -%>
	      </div>
        <%= yield %>
        
      </div>

      

      <div id="sidebar">
	    <div class="block">
		  <h3>Menu</h3>
		  <ul class = "navigation">
			<li><%= link_to "Projetos", projects_path%></li>
			<li><%= link_to "Clientes", clients_path%></li>
			<li><%= link_to "Tickets", tickets_path%></li>
		  </ul>
        </div>
      </div>
    
      

    </div>
    <div id="footer">
        <div class="block">
          <p>Copyright &copy; <%= Time.now.year %> Web App.</p>
        </div>      
    </div>    
  </div>
</body>
</html>
