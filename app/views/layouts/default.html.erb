<!DOCTYPE html>
<html>
<head>
  <title>Central de comando</title>
  <%= stylesheet_link_tag "ui.jqgrid" %>
  <%= stylesheet_link_tag "ui-custom/jquery-ui-1.8.16.custom" %>
  <%= stylesheet_link_tag "formtastic" %>
  <%= stylesheet_link_tag "formtastic_changes" %>
  <%= stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/Djime-Cerulean/style", "web-app-theme/override", :cache => true %>
  
  
  <%= javascript_include_tag :defaults, :cache => true %>
  <%= javascript_include_tag '/javascripts/i18n/grid.locale-en.js' %>
  <%= javascript_include_tag '/javascripts/jquery.jqGrid.min.js' %>
  <%= javascript_include_tag '/javascripts/tiny_mce/tiny_mce'%>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <div id="header">
      <h1><a href="/">Central de comando</a></h1>
      <div id="user-navigation">
        <ul class="wat-cf">
          <li><a href="#"><%= t("web-app-theme.profile", :default => "Minha conta") %></a></li>
          <li><%= link_to t("web-app-theme.users", :default => "UsuÃ¡rios"), cc_users_path  %>  </li>
          <li><%= link_to t("web-app-theme.logout", :default => "Sair") , session_path, :method => :delete %></li>
        </ul>
      </div>
      <div id="main-navigation">
	  
        <ul class="wat-cf"> 
	      <li class="<%= controller.controller_path == 'projects' ? 'active' : '' %>"><a href="<%= projects_path %>"><%=t("activerecord.models.projects", :default => "Projetos")%></a></li>
	      <li class="<%= controller.controller_path == 'clients' ? 'active' : '' %>"><a href="<%= clients_path %>"><%=t("activerecord.models.clients", :default => "Clients")%></a></li>
	      <li class="<%= controller.controller_path == 'tickets' ? 'active' : '' %>"><a href="<%= tickets_path %>"><%=t("activerecord.models.tickets", :default => "Tickets")%></a></li>
	      <li class="<%= controller.controller_path == 'filters' ? 'active' : '' %>"><a href="<%= filters_path %>"><%=t("activerecord.models.filters", :default => "Filtros")%></a></li>
	      <!--<li class="<%= controller.controller_path == 'stories' ? 'active' : '' %>"><a href="<%= stories_path %>">Stories</a></li></ul> -->

      </div>
    </div>    
    <div id="wrapper" class="wat-cf">
      

      <div id="main" style="height:400px">
	    <div class="flash">
	        <% flash.each do |type, message| -%>
	          <div class="message <%= type %>">
	            <p><%= message %></p>
	          </div>
	        <% end -%>
	      </div>
        <%= yield %>
        <div id="footer">
	        <div class="block">
	          <p>Copyright &copy; <%= Time.now.year %> Central de comando.</p>
	        </div>      
	    </div>
      </div>

      

      <div id="sidebar">
	    <%= yield :sidebar%>
      </div>
    
     

    </div>

      

  </div>
</body>
</html>
